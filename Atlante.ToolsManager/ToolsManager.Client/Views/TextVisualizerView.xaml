<UserControl x:Class="ToolsManager.Client.Views.TextVisualizerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             Height="Auto" Width="Auto" MinWidth="400" MinHeight="250">
    <TextBox Text="{Binding Value, Mode=OneWay}" Margin="6" Height="Auto" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Visible" />
</UserControl>
