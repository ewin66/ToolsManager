<Window x:Class="ToolsManager.Client.Forms.DownloadOptionsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Atlante.Localization;assembly=Atlante.Localization"
        Title="{loc:Translate Key=UI_DOWNLOAD_OPTIONS}" Height="220" Width="400" MinHeight="220" MinWidth="400"
        WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" ShowInTaskbar="False">
    <Grid>
        <Label Content="{loc:Translate Key=UI_QUESTION_DOWNLOADED_FILES}" Height="28" HorizontalAlignment="Left" Margin="10,10,0,0" Name="label1" VerticalAlignment="Top" />
        <RadioButton Content="{loc:Translate Key=UI_DISCARD_FILES}" IsChecked="True" Height="16" HorizontalAlignment="Left" Margin="42,48,0,0" Name="radNone" VerticalAlignment="Top" />
        <RadioButton Content="{loc:Translate Key=UI_OVERWRITE_FILES}" Height="16" HorizontalAlignment="Left" Margin="42,74,0,0" Name="radOverwrite" VerticalAlignment="Top" />
        <RadioButton Content="{loc:Translate Key=UI_USE_MERGE_APPLICATION}" Height="16" HorizontalAlignment="Left" Margin="42,100,0,0" Name="radMerge" VerticalAlignment="Top" />
        <Button Content="{loc:Translate Key=UI_OK}" Margin="0,0,11,11" Name="btnOk" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="btnOk_Click" />
    </Grid>
</Window>
