<Window x:Class="ToolsManager.Client.Forms.ListOptionsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Atlante.Localization;assembly=Atlante.Localization"
        Title="{loc:Translate Key=UI_OPTIONS}" Height="142" Width="352">
    <Grid>
        <Label Content="{Binding Description}" Height="28" HorizontalAlignment="Left" Margin="10,10,0,0" Name="label1" VerticalAlignment="Top" Width="79" HorizontalContentAlignment="Right" />
        <ComboBox ItemsSource="{Binding Options}" SelectedItem="{Binding SelectedValue}" Height="23" Margin="95,15,12,0" Name="comboBox1" VerticalAlignment="Top" />
        <Button Content="{loc:Translate Key=UI_SELECT}" Height="23" HorizontalAlignment="Right" Margin="0,0,93,16" Name="button1" VerticalAlignment="Bottom" Width="75" Click="button1_Click" />
        <Button Content="{loc:Translate Key=UI_CANCEL}" IsCancel="True" Height="23" HorizontalAlignment="Right" Margin="0,0,12,16" Name="button2" VerticalAlignment="Bottom" Width="75" />
    </Grid>
</Window>
